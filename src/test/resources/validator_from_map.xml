<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ValidationRules>
    <ValidationRule group="POSTAL_CODE_LENGTH">
        <Condition logic="has_text">
            <Function logic="get" param="@{postalCode}" />
        </Condition>
        <Condition logic="equals" value2="5">
            <Function logic="length">
                <Function logic="get" param="@{postalCode}" />
            </Function>
        </Condition>
    </ValidationRule>
</ValidationRules>